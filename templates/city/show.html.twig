{% extends 'base.html.twig' %}

{% block title %}Détails de la Ville{% endblock %}

{% block body %}
    <div class="container">
        <br>
        <h1>{{ city.name }}</h1>
        <br><br>
        {% include 'layouts/_flash_message.html.twig' %}

        <table class="table custom-table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ city.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ city.name }}</td>
                </tr>
                <tr>
                    <th>Code postal</th>
                    <td>{{ city.zipCode }}</td>
                </tr>
                <tr>
                    <th>Frais de livraison</th>
                    <td>
                        {% if city.shippingCost > 0 %}
                            <span class="badge bg-info user-btn">{{ city.shippingCost }} €</span>
                        {% else %}
                            <span class="badge bg-success user-btn">Gratuit</span>
                        {% endif %}
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="d-inline-block">
            <a href="{{ path('app_city_edit', {'id': city.id}) }}" class="user-btn btn btn-primary">Modifier</a>
            <a href="{{ path('app_city_index') }}" class="user-btn btn btn-secondary">Retour à la liste</a>
            <div class="d-inline-block">
                {{ include('city/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
