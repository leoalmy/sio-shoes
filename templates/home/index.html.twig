{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<div class="container">
<br>
    <div class="row">
        {% for product in products %}
            <div class="col-md-3 mt-4">
                <div class="card" style="width: 20vh;">
                    {% if product.image %}
                        <img src="{{ asset('uploads/images/' ~ product.image) }}" class="card-img-top" alt="{{ product.name }}" style="height: 20vh; object-fit: cover;">
                    {% else %}
                        <i class="bi bi-images large-icon"></i>
                    {% endif %}
                    <div class="card-body">
                        <a style="text-decoration: none; color: black;" href="{{ path('app_home_product_show', {'id': product.id}) }}">
                            <h5 class="card-title">{{ product.name }}</h5>
                        </a>
                        <p class="card-text text-truncate">{{ product.description }}</p>
                        <h3>{{ product.price }}â‚¬</h3>
                        <a href="{{ path('app_cart_add', { 'id': product.id}) }}" class="btn btn-primary">Ajouter au panier</a>
                    </div>
                </div>
            </div>
        {% else %}
            <p>Aucun produit disponible.</p>
        {% endfor %}
    </div>
    <br>
        {{ knp_pagination_render(products, 'layouts/pagination.html.twig') }}
</div>
{% endblock %}
