{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
<div class="container">

    {# --- Carte du produit en cours --- #}
    <div class="card mb-4" style="margin-top: 3vh;">
        <div class="row g-0">
            <div class="col-md-4">
                {% if product.image %}
                    <img src="{{ asset('uploads/images/' ~ product.image) }}" 
                         class="img-fluid rounded-start" 
                         alt="{{ product.name }}" 
                         style="height: 40vh; object-fit: cover;">
                {% else %}
                    <i class="bi bi-images large-icon"></i>
                {% endif %}
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h2 class="card-title">{{ product.name }}</h2>
                    <p class="card-text">{{ product.description }}</p>
                    <h3>{{ product.price }} €</h3>
                    <a href="#" class="btn btn-primary">Ajouter au panier</a>
                    <br><br>
                    <a href="{{ path('app_home') }}" class="btn btn-secondary">Retour à l'accueil</a>
                </div>
            </div>
        </div>
    </div>

    {# --- Carousel des derniers produits --- #}
    <h2 class="mt-5">Derniers produits ajoutés</h2>

    <div id="lastProductsCarousel" class="carousel slide">
        <div class="carousel-inner">
            {% for group in products|batch(4) %}
                <div class="carousel-item {% if loop.first %}active{% endif %}">
                    <div class="row">
                        {% for product in group %}
                            <div class="col-md-3">
                                <div class="card card-product h-100">
                                    {% if product.image %}
                                        <img src="{{ asset('uploads/images/' ~ product.image) }}" 
                                             class="card-img-top" 
                                             alt="{{ product.name }}">
                                    {% else %}
                                        <i class="bi bi-images large-icon"></i>
                                    {% endif %}
                                    <div class="card-body d-flex flex-column">
                                        <a href="{{ path('app_home_product_show', {'id': product.id}) }}"
                                           style="text-decoration: none; color: black;">
                                            <h5 class="card-title">{{ product.name }}</h5>
                                        </a>
                                        <p class="card-text text-truncate">{{ product.description }}</p>
                                        <h3>{{ product.price }}€</h3>
                                        <a href="{{ path('app_cart_add', { 'id': product.id}) }}" class="btn btn-primary mt-auto w-100">Ajouter au panier</a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
        </div>

        {# Contrôles du carousel #}
        <button class="carousel-control-prev" type="button" data-bs-target="#lastProductsCarousel" data-bs-slide="prev">
        <i class="bi bi-chevron-left fs-1 text-dark"></i>
        <span class="visually-hidden">Précédent</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#lastProductsCarousel" data-bs-slide="next">
        <i class="bi bi-chevron-right fs-1 text-dark"></i>
        <span class="visually-hidden">Suivant</span>
        </button>
    </div>

</div>
{% endblock %}
