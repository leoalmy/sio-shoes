{% extends 'base.html.twig' %}

{% block title %}Votre panier{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="bi bi-cart-fill"></i> Votre panier</h3>
        </div>
        <div class="card-body">

            {% include 'layouts/_flash_message.html.twig' %}

            {% if items is empty %}
                <div class="alert alert-info text-center">
                    <i class="bi bi-info-circle"></i> Votre panier est vide.
                </div>
            {% else %}
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>Produit</th>
                                <th class="text-center">Quantité</th>
                                <th class="text-end">Prix</th>
                                <th class="text-end">Total</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for item in items %}
                            <tr>
                                <td>
                                    <strong>{{ item.product.name }}</strong><br>
                                    <small class="text-muted">{{ item.product.description|slice(0,50) ~ '...' }}</small>
                                </td>
                                <td class="text-center">{{ item.quantity }}
                                    <a href="{{ path('app_cart_add', { 'id': item.product.id }) }}" 
                                       class="btn btn-sm btn-outline-success ms-2">
                                        <i class="bi bi-plus-lg"></i>
                                    </a>
                                    <a href="{{ path('app_cart_subtract', { 'id': item.product.id }) }}" 
                                       class="btn btn-sm btn-outline-warning ms-1">
                                        <i class="bi bi-dash-lg"></i>
                                    </a>
                                </td>
                                <td class="text-end">
                                    <span class="badge bg-info text-dark">
                                        {{ item.product.price|number_format(2, ',', ' ') }} €
                                    </span>
                                </td>
                                <td class="text-end">
                                    <span class="badge bg-success">
                                        {{ (item.product.price * item.quantity)|number_format(2, ',', ' ') }} €
                                    </span>
                                </td>
                                <td class="text-center">
                                    <a href="{{ path('app_cart_remove', { 'id': item.product.id }) }}" 
                                       class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Supprimer
                                    </a>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <h4 class="mb-0">Total : 
                        <span class="text-success fw-bold">
                            {{ total|number_format(2, ',', ' ') }} €
                        </span>
                    </h4>
                    <a href="{{ path('app_cart_clear') }}" class="btn btn-danger">
                        <i class="bi bi-x-circle"></i> Vider le panier
                    </a>
                </div>
            {% endif %}
        </div>
        <div class="card-footer text-end">
            <a href="{{ path('app_home') }}" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Continuer vos achats
            </a>
            {% if items is not empty %}
                <a data-turbo="false" href="{{ path('app_order') }}" class="btn btn-primary">
                    <i class="bi bi-credit-card"></i> Valider et Payer
                </a>
            {% endif %}
    </div>
</div>
{% endblock %}
